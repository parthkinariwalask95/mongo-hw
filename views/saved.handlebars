<div class="jumbotron" style="background-image: url(https://hellboundbloggers.com/wp-content/uploads/2009/10/Great-Tips-For-Writing-A-Killer-Blog-Article.jpg); background-size: 100%; height:400px;">
    <div class="container for-about">
        <h1 class="text-center" style="color:blueviolet"><marquee>Saved Articles</marquee></h1>
        <h1 class="text-center"></h1>

    </div>
</div>


{{#each articles}}
<br>
<br>
<br>

<div class="backcard">
    <div>
        <span>
            <p class="header1 savedlist">{{this.headline}}</p>
            <button class="btn btn-warning float-right note" style="float:right;margin:5px;" data-id="{{this._id}}" data-toggle="modal"
                data-target="#exampleModal{{this._id}}">ARTICLE NOTE</button>

            <button class="btn btn-primary float-right unsaved" style="float:right;margin:5px;" data-id="{{this._id}}">Remove Saved</button>
            <div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div style="background-color: darkred" class="modal-header">
                            <h3 class="modal-title" style="color:navy" id="exampleModalLabel">Notes</h3>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{#if this.notes}}
                             {{#each this.notes}}
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <p class="previousNotes" style="color:black"> {{this.body}}</p>
                                    <button type="button" class="btn btn-danger deleteNote" data-note-id={{this._id}} data-article-id={{this.article}}>X</button>
                                </div>
                            </div>
                            {{/each}} {{else}}
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <h4 style="color:green">No notes for this article!!</h4>
                                </div>
                            </div>
                            {{/if}}
                            <label for="comment">Comment:</label>
                            <textarea class="form-control" rows="5" id="comment{{this._id}}"></textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" style="color:black" data-dismiss="modal">Close</button>
                            <button type="button" data-id="{{this._id}}" class="btn btn-black savenote">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </span>
        <p class="detailstext">{{this.summury}}</p>
        <p class="detailstext">
            <a class="link" href="https://www.nytimes.com{{this.url}}" target="_blank">click here to see more !!!</a>
        </p>
    </div>

</div>
</div>

{{/each}}
<script src="./save.js"></script>